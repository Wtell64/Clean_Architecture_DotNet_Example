@model TaskDto

@await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Task Detail" })
<div class="modal-body">
    <div class="row mb-3">
        <label asp-for="Description" class="col-lg-3 col-form-label"></label>
        <div class="col-lg-9">
            <span class="form-control">@Model.Description</span>
        </div>
    </div>
  <div class="row mb-3">
    <label asp-for="StartDate" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
      <input type="date" rows="5" asp-for="StartDate" class="form-control" />
      <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="EndDate" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
      <input type="date" rows="5" asp-for="EndDate" class="form-control" />
      <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
  </div>

  @* TODO: Add Requests, EmployeeUser and TaskStatus *@
</div>
@await Html.PartialAsync("_ModalFooter", new ModalFooter { OnlyCancelButton = true, CancelButtonText = "Close" })