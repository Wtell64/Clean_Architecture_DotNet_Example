@model DepartmentDto

<form asp-action="DeleteDepartmentItem" asp-route-id="@Model.Id" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Delete Department" })
    <div class="modal-body form-horizontal">
        Are you want to delete @Model.Name?
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { SubmitButtonText = "Delete" })
</form>